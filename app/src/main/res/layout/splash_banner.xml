<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_banner_image_height"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img1" />

    <TextView
        android:id="@+id/splash_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:textColor="@color/MainColor"
        android:textSize="@dimen/sp_banner_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splash_banner_desp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"
        android:textAlignment="center"
        android:textColor="@color/introBannerColor"
        android:textSize="@dimen/sp_banner_desc_text_size" />


</LinearLayout>