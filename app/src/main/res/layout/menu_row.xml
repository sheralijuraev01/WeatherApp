<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update"
    android:paddingHorizontal="16dp"
    android:paddingVertical="@dimen/menu_row_padding_ver"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="0.3">
        <ImageView
            android:id="@+id/icon_desp_menu"
            android:layout_width="@dimen/menu_row_icon_size"
            android:layout_height="@dimen/menu_row_icon_size"
            android:src="@drawable/cloudy"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/state_name_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menu_row_state_name_text_size"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/city_name_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menu_row_city_name_text_size"
            android:textColor="@color/textColor"/>
    </LinearLayout>





</LinearLayout>